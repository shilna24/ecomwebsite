<%- include('./includes/header.ejs') %>
<%- include('./includes/nav.ejs') %>
<% if(cartProducts){ %>
    <% if(cartProducts.Products.length>0){ %>
        <!-- Shoping Cart -->
        <form class=" bg0 p-t-50 p-b-85 mt-5">
            <div id="cartfill" class="container">
                <div class="row">
                    <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                        <div class="m-l-25 m-r--38 m-lr-0-xl">
                            <div class="wrap-table-shopping-cart">
                                <table class="table-shopping-cart">
                                    <tr class="table_head">
                                        <th class="column-1">Product</th>
                                        <th class="column-2"></th>
                                        <th class="column-3">Price</th>
                                        <th class="column-4">Quantity</th>
                                        <th class="column-5">Total</th>
                                        <th class="column-5"></th>
                                    </tr>
                                    <%cartProducts.Products.forEach((p,index)=>{ %>
                                        <tr class="table_row">
                                            <td class="column-1">
                                                <div class="how-itemcart1">
                                                    <img src="/product-images/<%=p.productId.image[0] %>" alt="IMG">
                                                </div>
                                            </td>
                                            <td class="column-2">
                                                <%=p.name %>
                                            </td>
                                            <td class="column-3">
                                                ₹ <%=p.price %>
                                            </td>
                                            <td class="column-4">
                                                <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                                    <div onclick="changeQuantity('<%=p._id %>',-1)"
                                                        class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                        <i class="fs-16 zmdi zmdi-minus"></i>
                                                    </div>
                                                    <input disabled id="qtynull-<%=p._id %>" class="mtex4t-10  txt-center num-product"
                                                        type="number" name="num-product1" value="<%=p.quantity %>">
                                                    <div onclick="changeQuantity('<%=p._id %>',1)"
                                                        class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                        <i class="fs-16 zmdi zmdi-plus"></i>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="column-5">
                                                ₹ <%=p.price*p.quantity %>
                                            </td>
                                            <td><a  onclick="deleteItemFromCart('<%=p._id %>')"
                                                class=" text-danger trash-icon"><i class="far fa-trash-alt"></i></a></td>
                                            
                                        </tr>
                                        <% }) %>
                                </table>
                            </div>
<!-- 
                            <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                                <div class="flex-w flex-m m-r-20 m-tb-5">
                                    <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text"
                                        name="coupon" placeholder="Coupon Code">
                                    <div
                                        class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
                                        Apply coupon
                                    </div>
                                </div>
                                <div
                                    class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                                    Update Cart
                                </div>
                            </div> -->
                        </div>
                    </div>
                    <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                        <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                            <h4 class="mtext-109 cl2 p-b-30">
                                Cart Totals
                            </h4>
                            
                            <div class="flex-w flex-t p-t-27 p-b-33">
                                <div class="size-208">
                                    <span class="mtext-101 cl2">
                                        Total:
                                    </span>
                                </div>
                                <div class="size-209 p-t-1">
                                    <span class="mtext-110 cl2">
                                        ₹ <%=cartProducts.total %>
                                    </span>
                                </div>
                            </div>
                            <a href="/checkout" class="flex-c-m stext-101 mt-5 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                                Proceed to Checkout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <% }else{ %>
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-12 mt-5">
                        <div>
                            <img src="/user/images/emptyCart.jpg" alt="">
                        </div>
                        <div>
                            <a class="btn btn-success my-3" href="/viewAllProduct">Start Shopping</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
            <% }else{ %>
                <div class="container">
                    <div class="row text-center">
                        <div class="col-md-12 mt-5">
                            <div>
                                <img src="/user/images/emptyCart.jpg" alt="">
                            </div>
                            <div>
                                <a class="btn btn-success my-3" href="/">Start Shopping</a>
                            </div>
                        </div>
                    </div>
    
                </div>
            <% } %>



        


        <!-- Back to top -->
        <div class="btn-back-to-top" id="myBtn">
            <span class="symbol-btn-back-to-top">
                <i class="zmdi zmdi-chevron-up"></i>
            </span>
        </div>
        <%-include('./includes/final.ejs') -%>
        <%- include('./includes/footer.ejs') -%>