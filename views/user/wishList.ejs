<%- include('./includes/header.ejs') %>
    <%- include('./includes/nav.ejs') %>
	<% if(wishProducts){ %> 
		<%if(wishProducts.myWish.length >0){%>
	<div class="cart-wrap">
		<div class="container">
            <div class="row mt-5">
			    <div class="col-md-12">
			        <div class="main-heading mb-10 text-center">My wishlist</div>
			        <div class="table-wishlist">
				        <table cellpadding="0" cellspacing="0" border="0" width="100%">
				        	<thead>
					        	<tr>
					        		<th width="45%">Product Name</th>
					        		<th width="15%">Price</th>
					        		<!-- <th width="15%">Stock Status</th> -->
					        		<th width="15%"></th>
					        		<th width="10%"></th>
					        	</tr>
					        </thead>
					        <tbody>
					        	
                                <%wishProducts.myWish.forEach((p,index)=>{%>
					        	<tr>
					        		<td width="45%">
					        			<div class="display-flex align-center">
		                                    <div class="img-product">
		                                        <img src="/product-images/<%=p.productId.image[0]%>" alt="" class="mCS_img_loaded">
		                                    </div>
		                                    <div class="name-product">
		                                        <%=p.productId.name%>
		                                    </div>
	                                    </div>
	                                </td>
					        		<td width="15%" class="price">Rs.<%=p.productId.price%></td>
					        		<!-- <td width="15%"><span class="in-stock-box">In Stock</span></td> -->
					        		<td width="15%"><a onclick="AddToCart1('<%=p.productId._id%>')" class="round-black-btn ">Add to Cart</a></td>
					        		<td width="15%"><a onclick="deleteItemFromWishlist('<%=p.productId._id%>')" class="round-black-btn ">Remove</a></td>
					        		
                                    <td width="10%" class="text-center"><a href="#" class="trash-icon"><i class="far fa-trash-alt"></i></a></td>
					        	</tr>
					        	<%})%>
						
				        	</tbody>
				        </table>
				    </div>
			    </div>
			</div>
		</div>
	</div>
	<% }else{ %>
		<div class="col-12 item-slick1" style="background-image: url(/user/images/emptyWishlist.jpg);background-size: 70%;"></div>
	<% } %>
	<% }else{ %>
		<div class="col-12 item-slick1" style="background-image: url(/user/images/emptyWishlist.jpg);background-size: 70%;"></div>
	<% } %>

    <%-include('./includes/final.ejs') -%>
    <%- include('./includes/footer.ejs') -%>