        <!-- modal -->
        <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Add Address</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/adddd" method="post" id="addressForm">

                                <div class="d-flex">
                                    <div class="mb-3 mr-5">
                                        <label for="recipient-name" class="col-form-label">Fist Name</label>
                                        <input type="String" class="form-control" name="firstname" id="firstName"
                                            onkeyup="validateName()">
                                        <span id="AddrName-error" class="text-danger font-weight-bold"></span>
                                    </div>
                                    <div class="mb-3 ml-5">
                                        <label for="recipient-name" class="col-form-label">Last Name</label>
                                        <input type="String" class="form-control" name="lastname" id="lastName"
                                            onkeyup="validateName2()">
                                        <span id="AddrName-error2" class="text-danger font-weight-bold"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="recipient-name" class="col-form-label">Phone</label>
                                    <input type="number" class="form-control" name="phone" id="mobileNumber"
                                        onkeyup="validatePhone()">
                                    <span id="AddrPhone-error" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="recipient-name" class="col-form-label">Address</label>
                                    <!-- <textarea name="address" id="address" class="form-control" cols="30" rows="4"></textarea> -->
                                    <input class="form-control" type="text" name="address" id="address"
                                        onkeyup="validateAddress()">
                                    <span id="AddrAddress-error" class="text-danger font-weight-bold"></span>
                                </div>



                                <div class="mb-3">
                                    <label for="message-text" class="col-form-label">Pincode</label>
                                    <input class="form-control" type="number" name="pincode" id="pin"
                                        onkeyup="validatePincode()">
                                    <span id="AddrPincode-error" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="recipient-name" class="col-form-label">State</label>
                                    <select name="state" class="custom-select d-block w-100" id="state" required="">
                                        <option value="">Choose...</option>
                                        <option>Kerala</option>
                                        <option>Tamil Nadu</option>
                                        <option>Karnadaka</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="recipient-name" class="col-form-label">District</label>
                                    <input name="district" type="text" class="form-control" id="district" placeholder=""
                                        onkeyup="validateDistrict()">
                                    <span id="AddrDistrict-error" class="text-danger font-weight-bold"></span>
                                </div>
                                <div class="mb-3">
                                    <input name="index" type="number" class="form-control" id="index" placeholder=""
                                        required="" hidden>
                                </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button onclick="return validateForm()" type="submit"
                                class="btn btn-primary">Submit</button>
                                
                            <span id="submit-error" class="text-danger font-weight-bold"></span>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

